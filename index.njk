---
pagination:
  data: collections.posts
  size: 12
  alias: posts
layout: layouts/home.njk
tags:
  - nav
navtitle: Home
---

{% set postslist = posts %}
{% include "postslist.njk" %}

<ul class="pagination">
	<li><a href='{{ pagination.previousPageLink }}'>prev</a></li>

	{% for i in range(0, 15) -%}
		{%- if pagination.pageLinks[i] -%}
  		<li><a href='{{ pagination.pageLinks[i] }}'>{{ i }}</a></li>
  		{% endif %}
	{%- endfor %}

	<li><a href='{{ pagination.nextPageLink }}'>next</a></li>
</ul>