
<div class="uk-grid-collapse uk-child-width-1-4@s uk-child-width-1-4@m" uk-grid>

{% for post in postslist | reverse %}
  <div class="uk-card uk-card-small uk-card-body">
      <a href="{{ post.url | url }}">
        <div class="uk-inline uk-cover-container">
        <img src="/img/{{post.data.img}}" alt="" height='180px'>
        <div class="uk-overlay uk-overlay-primary uk-position-top">{{post.data.title}}</div>
      </div>
      </a>  
      <div class="uk-card-badge"><span class="uk-badge">${{post.data.price}}</span></div>
      <div class="uk-card-footer">
        {% for tag in post.data.tags %}
          {%- if tag != "post" -%}
          {% set tagUrl %}/tags/{{ tag }}/{% endset %}
          <span class="uk-label"><a href="{{ tagUrl | url }}" class='uk-text-warning'>{{ tag }}</a></span>
          {%- endif -%}
        {% endfor %}
      </div>
  </div>
{% endfor %}

</div>