<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or metadata.title }} - hoodie</title>
		<link rel="stylesheet" href="{{ '/css/index.css' | url }}">
		<link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
		<link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
		<link rel="stylesheet" href="https://unpkg.com/mustard-ui@latest/dist/css/mustard-ui.min.css">
	</head>
	<body>
	<nav><div class="nav-container">
        <div class="nav-logo align-left">
            <h1><a href="/">Hoodie Hunt </a></h1>
        </div>
        <ul class="nav-links">
        	{%- for nav in collections.nav | reverse -%}
				<li><a class="{% if nav.url == page.url %}active{% endif %}" href="{{ nav.url | url }}">{{ nav.data.navtitle }}</a></li>
			{%- endfor -%}
        </ul>
    </div></nav>

    <main>
    	<div class="container">

		<section class="section-secondary">
  		<div class="row">

    		{{ layoutContent | safe }}

  		</div>
		</section>

	</div>
	</main>

<footer></footer>
		<!-- Current page: {{ page.url | url }} -->
	</div>
	</body>
</html>
