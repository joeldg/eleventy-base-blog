---
layout: layouts/base.njk
templateClass: tmpl-post
filter:
    - all
    - nav
    - post
    - posts
---

<div class="uk-section uk-section-default">
    <div class="uk-container">

<h1>{{ title }}</h1>

{{ layoutContent | safe }}


<p><a href="{{ '/' | url }}">‚Üê Home</a></p>


{% for tag in tags %}
	{%- if tag != "nav" -%}
  		<a href="/tags/{{ tag }}"><button class="uk-button uk-button-default uk-button-small">{{ tag }}</button></a>
  	{% endif %}
{% endfor %}

	</div>
</div>